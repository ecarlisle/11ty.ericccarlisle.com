{% if eleventyNavigation %}
{% set crumbs = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key) %}

<script type = "application/ld+json"> 
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
  {
    "@type": "ListItem",
    "position": "1",
    "name": "Home",
    "item": "{{site.hostname}}"
  },
  {%- for crumb in crumbs %}
  {
    "@type": "ListItem",
    "position": "{{loop.index0+2}}",
    "name": "{{crumb.key}}",
    "item": "{{site.hostname}}{{crumb.url}}"
  },
  {% endfor -%}
  {
    "@type": "ListItem",
    "position": "{{crumbs.length+2}}",
    "name": "{{title}}",
    "item": "{{site.hostname}}{{page.url}}"
  }]
} 
</script>
{% endif %}
